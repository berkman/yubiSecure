{
  "name": "yubiSecure",
  "description": "Yubikey NEO Setup with Strong Authentication and Secure Email certificates via a Chrome App",
  "version": "0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "39",
  "app": {
    "background": {
      "scripts":  ["background.js"]
    }
  },
  "permissions": [
    "usb",
    { "usbDevices": [ { "vendorId": 4176,"productId": 274 },
                      { "vendorId": 4176,"productId": 277 } ] }
  ],
  "icons": {
    "16":	"assets/icon_16.png",
    "128":	"assets/icon_128.png"
  }
}
